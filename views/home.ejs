<%- include('partials/header') %>
<h1>Home</h1>
<%= homeStartingContent %>
<div>
    <% posts.forEach(function(post){ %>
    <h2><%=     post.title               %></h2>
        <%      let fullContentSrting = post.content; %>
        <% if (fullContentSrting.length > 100){ %>
            <%      let turncatedContentString  = fullContentSrting.substring(0,100); %> 
            <%      turncatedContentString = turncatedContentString + " ..."; %> 
            <%=     turncatedContentString    %>
        <% } else { %>
            <%=     fullContentSrting %>
        <% } %>
 
        <% })                            %>


   
</div>  
<%- include('partials/footer') %>